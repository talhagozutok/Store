@model ProductDtoForInsertion

<div class="text-center">
  <div class="display-6 my-3">Create product</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">
  <div class="text-danger" asp-validation-summary="All"></div>

  <div class="form-floating my-3">
    <select
      class="form-control"
      asp-items="@ViewBag.Categories"
      asp-for="CategoryId"
    ></select>
    <label asp-for="CategoryId">Category name</label>
  </div>

  <div class="form-floating my-3">
    <input asp-for="ProductName" class="form-control" />
    <label asp-for="ProductName">Product name</label>
  </div>

  <div class="form-floating my-3">
    <textarea class="form-control" asp-for="Summary"></textarea>
    <label asp-for="Summary">Product summary</label>
  </div>

  <div class="form-floating my-3">
    <input asp-for="Price" class="form-control" />
    <label asp-for="Price">Price</label>
  </div>

  <div class="form-group my-3">
    <div class="input-group custom-file-button">
      <label asp-for="ImageUrl" class="input-group-text"
        >Image:&nbsp;
      </label>
      <input asp-for="ImageUrl" name="file" type="file" class="form-control" />
    </div>
  </div>

  <div class="form-group my-3">
    <div class="btn-group">
      <button class="btn btn-primary" type="submit">
        <i class="fa fa-save"></i>
        Save
      </button>
      <a class="btn btn-outline-primary" asp-action="Index">
        <i class="fa fa-list"></i>
        Products
      </a>
    </div>
  </div>
</form>

