@model UserDtoForCreation

<div class="text-center">
    <div class="display-6 my-3">Create user</div>
</div>

<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-floating my-3">
                <input asp-for="UserName" class="form-control">
                <label asp-for="UserName"></label>
            </div>
            <div class="form-floating my-3">
                <input asp-for="Password" class="form-control">
                <label asp-for="Password"></label>
            </div>
            <div class="form-floating my-3">
                <input asp-for="Email" class="form-control">
                <label asp-for="Email"></label>
            </div>
            <div class="form-floating my-3">
                <input asp-for="PhoneNumber" class="form-control">
                <label asp-for="PhoneNumber"></label>
            </div>

            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-ended">
                    <a class="btn btn-outline-primary" asp-action="Index">
                        <i class="fa-solid fa-arrow-left"></i>
                        Back
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-user-plus"></i> Create
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="lead p-2 mt-2">
                Roles
                @foreach (var item in Model.Roles)
                {
                <div class="form-check my-2">
                    <input type="checkbox" class="form-check-input " name="Roles" value="@item">
                    <label class="form-check-label">@item</label>
                </div>
                }
            </div>
        </div>
    </div>
</form>
