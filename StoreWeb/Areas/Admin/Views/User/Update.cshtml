@model UserDtoForUpdate

<div class="text-center">
    <div class="display-6 my-3">Update user</div>
</div>

<form method="post" asp-action="Update">
    <div class="row">
        <div class="col-md-6">
            <div class="form-floating my-3">
                <input asp-for="UserName" class="form-control">
                <label asp-for="UserName">Username</label>
            </div>
            <div class="form-floating my-3">
                <input asp-for="Email" class="form-control">
                <label asp-for="Email"></label>
            </div>
            <div class="form-floating my-3">
                <input asp-for="PhoneNumber" class="form-control">
                <label asp-for="PhoneNumber"></label>
            </div>

            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-ended">
                    <a class="btn btn-outline-primary" asp-action="Index">
                        <i class="fa-solid fa-arrow-left"></i>
                        Back
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-user-pen"></i> Update
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="lead p-2 mt-2">
                Roles
                @foreach (var item in Model.Roles)
                {
                // Fix when click on label selection
                <div class="form-check my-2">
                    <input
                        type="checkbox"
                        class="form-check-input"
                        name="Roles"
                        value="@item"
                        checked="@(Model.UserRoles.Contains(@item))">
                    <label class="form-check-label">@item</label>
                </div>
                }
            <div class="text-muted">
                Please choose the roles for the user.
            </div>
            </div>
        </div>
    </div>
</form>
