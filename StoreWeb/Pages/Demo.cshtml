@page
@model DemoModel
@{ }

<div class="my-5 text-center">
  <form method="post" asp-page="/Demo">
    <div class="display-6">@(@Model?.FullName != null ? $"Hello {@Model.FullName}" : null)</div>
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="name"
        placeholder="Enter your name"
      />
      <input type="submit" class="btn btn-primary my-3">
    </div>
  </form>
</div>
