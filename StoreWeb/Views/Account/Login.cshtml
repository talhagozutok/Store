@model LoginModel

<div class="text-center rounded-3 p-3">
    <h6 class="display-6 d-flex justify-content-center align-items-center gap-3">
        <i class="fa-solid fa-right-to-bracket text-primary bg-light p-3 rounded-5"></i>
        Login
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl">

            <div class="form-floating my-3">
                <input asp-for="UserName" class="form-control">
                <label asp-for="UserName"></label>
            </div>
            <div class="form-floating my-3">
                <input asp-for="Password" class="form-control">
                <label asp-for="Password"></label>
            </div>
            <div class="form-floating my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    Login
                </button>
            </div>

            <div class="text-center">
                Don't have an account?
                <a asp-action="Register">Sign up</a>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

