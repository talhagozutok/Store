@model RegisterDto

<div class="text-center rounded-3 p-3">
    <h6 class="display-6 d-flex justify-content-center align-items-center gap-3">
        <i class="fa-solid fa-user-plus text-primary bg-light p-3 rounded-5"></i>
        <span>Register</span>
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Register">
            <div class="form-floating my-3">
                <input asp-for="UserName" class="form-control">
                <label asp-for="UserName"></label>
            </div>
            <div class="form-floating my-3">
                <input asp-for="Password" class="form-control">
                <label asp-for="Password"></label>
            </div>
            <div class="form-floating my-3">
                <input asp-for="Email" class="form-control">
                <label asp-for="Email"></label>
            </div>
            <div class="form-floating my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-user-plus"></i>
                    Register
                </button>
            </div>
            <div class="text-center">
                Have an account already?
                <a asp-action="Login">Login</a>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
