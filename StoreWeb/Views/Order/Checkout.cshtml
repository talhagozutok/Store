@model Order

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="Checkout">
    <div class="form-floating my-3">
        <input class="form-control" asp-for="Name">
        <label asp-for="Name">Name</label>
    </div>
    <div class="form-floating my-3">
        <input class="form-control" asp-for="Line1">
        <label asp-for="Line1">Line1</label>
    </div>
    <div class="form-floating my-3">
        <input class="form-control" asp-for="Line2">
        <label asp-for="Line2">Line2</label>
    </div>
    <div class="form-floating my-3">
        <input class="form-control" asp-for="Line3">
        <label asp-for="Line3">Line3</label>
    </div>
    <div class="form-floating my-3">
        <input class="form-control" asp-for="City">
        <label asp-for="City">City</label>
    </div>
    <div class="form-check my-3">
        <input class="form-check-input" type="checkbox" asp-for="GiftWrap">
        <label class="form-check-label" asp-for="GiftWrap">Gift wrap these items</label>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Complete order</button>
    </div>
</form>
