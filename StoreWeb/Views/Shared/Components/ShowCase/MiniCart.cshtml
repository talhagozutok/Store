@model IEnumerable<Product>

<div class="row">
    @foreach (var prd in Model)
    {
        <div class="col-md-2 my-3">
            <div class="card" style="width: 10rem;">
                <img class="card-img-top" width="100" height="200" src="@prd.ImageUrl" alt="Card image cap">
                <div class="card-body position-relative">
                    <h5 class="card-title">@prd.ProductName</h5>
                    <p class="card-text">
                        @prd.Price.ToString("c")
                    </p>
                    <div class="position-absolute top-50 end-0 translate-middle-y mx-2">
                        <a class="btn btn-outline-secondary rounded-2"
                         asp-controller="Product" asp-action="Get" asp-route-id="@prd.ProductId"
                         data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Details"
                         >
                        <i class="fa-solid fa-arrow-right fa-xs"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
